@using ClientManagerApp.ViewModels;

@model LoginViewModel

@{
    ViewData["Title"] = "Авторизация";
}

<link rel="stylesheet" href="~/css/LoginStyle.css">

<div class="container mt-5">
    <div class="row d-flex align-items-center justify-content-center">
        <div class="col-md-5 card py-4">
            <h2 class="text-center custom-blue">Вход в систему</h2>
            <form asp-action="Login" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group mb-3">
                    <label asp-for="UserName" class="control-label custom-blue">Логин</label>
                    <input asp-for="UserName" class="form-control" />
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="Password" class="control-label custom-blue">Пароль</label>
                    <input asp-for="Password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group form-check mb-3">
                    <input asp-for="RememberMe" class="form-check-input" />
                    <label class="form-check-label custom-blue">
                        @Html.DisplayNameFor(a => a.RememberMe)
                    </label>
                </div>
                <div class="row">
                    <div class="col-8">
                        <a asp-action="Register" class="text-decoration-none custom-blue float-start">У вас нет аккаунта?</a>
                    </div>
                    <div class="col-4">
                        <input type="submit" value="Войти" class="btn btn-custom-blue btn-sm float-end" />
                    </div>
                </div>
            </form>
        </div>
    </div>
    

    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }
